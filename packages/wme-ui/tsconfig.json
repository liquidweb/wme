{
	"extends": "@moderntribe/tsconfig/react-library.json",
	"compilerOptions": {
		"declarationDir": "types",
		"typeRoots": ["./typings", "./types", "./node_modules/@types"]
	},
	"include": ["src/**/*", "types/declaration.d.ts"],
	"exclude": [
		"build",
		"dist",
		"node_modules",
		"src/**/*.test.tsx",
		"src/**/*.stories.tsx"
	]
}
